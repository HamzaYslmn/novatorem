{
    "name": "novatorem",
    "description": "Realtime profile Readme displaying currently playing song on Spotify using the Spotify API.",
    "scripts": {
        "postdeploy": "uvicorn api.spotify:app --host=0.0.0.0 --port=8000"
    },
    "env": {
        "SPOTIFY_CLIENT_ID": {
            "required": true
        },
        "SPOTIFY_REFRESH_TOKEN": {
            "required": true
        },
        "SPOTIFY_SECRET_ID": {
            "required": true
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "addons": [],
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ],
    "stack": "heroku-20"
}
